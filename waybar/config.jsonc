// -*- mode: jsonc -*-
{
    "height": 32,
    "margin-top": 8,
    "margin-bottom": 0, // Let Hyprland decide how large this gap is.
    "margin-left": 8,
    "margin-right": 8,
    "reload_style_on_change": true,
    "modules-left": [
        "custom/power",
        "cpu",
        "memory",
        "custom/media"
    ],
    "modules-center": [
        "hyprland/workspaces",
        "hyprland/submap",
    ],
    "modules-right": [
        "tray",
        "pulseaudio",
        "network",
        "power-profiles-daemon",
        "keyboard-state", // TODO
        "hyprland/language",
        "battery",
        "clock",
        "custom/notification"
    ],
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û∞ÇÑ",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "clock": {
        "interval": 1,
        "format": "{:%A, %d %B %I:%m %p}",
        "format-alt": "{:%r}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
        "format": "Ôãõ  {usage}%",
        "tooltip": true
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-lv": "LV"
    },
    "memory": {
        "format": "ÔÉâ  {}%"
    },
    "network": {
        "format-disconnected": "‚ö† ",
        "format-linked": "Û∞Öõ ",
        "format-ethernet": "<span font=\"13\">Û∞àÄ </span>",
        "format-wifi": "Ôá´ ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß ",
        "performance": "Û∞ìÖ ",
        "balanced": "Ôâé ",
        "power-saver": "ÔÅ¨ "
      }
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "0% Óª® ",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "0% Óª®  {icon}Ôäî {format_source}",
        "format-source": "",
        "format-source-muted": "",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "tray": {
        "spacing": 10
    },
    "custom/media": {
        "format": "{icon} {0}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "<span font=\"14\" rise=\"-1500\">ÔÜº </span>",
            "default": "<span font=\"14\">üéú </span>"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/modules/media_player.py 2> /dev/null"
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
          "none": "Û∞Çú ",
          "notification": "Û∞Çö ",
          "dnd-none": "Û∞™ë ",
          "dnd-notification": "Û∞Çõ ",
          "inhibited-none": "Û∞Çü ",
          "inhibited-notification": "Û∞Çû ",
          "dnd-inhibited-none": "Û∞™ë ",
          "dnd-inhibited-notification": "Û∞Çõ "
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/power": {
        "format" : "Û∞£á ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/modules/power_menu.xml",
        "menu-actions": {
            "shutdown": "systemctl poweroff",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
}
